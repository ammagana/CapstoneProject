@page
@model OrderCookDeliver.Pages.DetailModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container marginTop">

    <div class="row">

        <div class="card">

            <div class="text-center view overlay hm-white-slight">

                <img src="~/img/Quinoa.jpg" class="img-fluid" alt="">

                <a href="#">

                    <div class="mask waves-effect waves-light"></div>

                </a>

            </div>
            
            <div class="card-block">
                <form method="get" action="~/ShoppingCart/Create">
                    <!--Title-->
                    
                    <h4 class="card-title">@Model.Name</h4>
                    <input type="text" name="Meal" value="@Model.Name"hidden/>
                    <input type="text" name="Price" value="@Model.Price"hidden/>
                    <!--Text-->

                    <p class="card-text">@Model.Description.</p>

                    <div class="container">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Meal Information</h3>
                            </div>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <div class="row toggle" id="dropdown-detail-1" data-toggle="detail-1">
                                        <div class="col-xs-10">
                                            Ingredients
                                        </div>
                                        <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                                    </div>
                                    <div id="detail-1">
                                        <hr></hr>
                                        <div class="container">
                                            <div class="fluid-row">
                                                <div class="col-xs-1">
                                                    Avocado<br />
                                                    Quinoa <br />
                                                    Black Beans<br />
                                                    Green Onions<br />
                                                    Red Bell Peppers<br />
                                                    Corn<br />
                                                    Extra Virgin Olive Oil<br />
                                                    Lime Juice<br />
                                                    Salt<br />
                                                    Corn<br />
                                                    Extra Virgin Olive Oil<br />
                                                    Lime Juice <br />
                                                    Salt
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="row toggle" id="dropdown-detail-2" data-toggle="detail-2">
                                        <div class="col-xs-10">
                                            Nutritional Facts
                                        </div>
                                        <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                                    </div>
                                    <div id="detail-2">
                                        <hr></hr>
                                        <div class="container">
                                            <div class="fluid-row">
                                                <div class="col-xs-1">
                                                    Calories: 922.2kcal<br />
                                                    Total Fat: 41.2g<br />
                                                    Sat: 5.6g<br />
                                                    Trans: 0g<br />
                                                    Monounsat: 24.88g
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="row toggle" id="dropdown-detail-3" data-toggle="detail-3">
                                        <div class="col-xs-10">
                                            Procedures
                                        </div>
                                        <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                                    </div>
                                    <div id="detail-3">
                                        <hr></hr>
                                        <div class="container">
                                            <div class="fluid-row">
                                                <div class="col-xs-1">
                                                    Detail:
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>


                    <div>
                        <select id="select1" name="Qty">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>  Servings
                    </div>
                    <p></p>

                    <p class="btn btn-group pull-right">

                        <a href="Menu" class="btn btn-default btn-outline-secondary">Show all Meals</a>

                        <button class="btn btn-default btn-outline-secondary" id="submit">

                            Add to cart

                        </button>


                    </p>
                </form>
            </div>

        </div>

    </div>

</div>

