@page
@model OrderCookDeliver.Models.Calendar

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container marginTop">

    <div class="row">

        <div class="card">

            <div class="text-center view overlay hm-white-slight">

                <img src="~/img/Quinoa.jpg" class="img-fluid" alt="">

                <a href="#">

                    <div class="mask waves-effect waves-light"></div>

                </a>

            </div>
            
            <div class="card-block">
                <form method="get" action="~/ShoppingCart/Create">
                    <!--Title-->
                    
                    <h4 class="card-title">@Model.mealName</h4>
                    <input type="text" name="Meal" value="@Model.mealName"hidden/>
                    <input type="text" name="Price" value="@Model.pricePerServg"hidden/>
                    <!--Text-->

                    <p class="card-text">@Model.description.</p>

                    <div class="container">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Meal Information</h3>
                            </div>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <div class="row toggle" id="dropdown-detail-1" data-toggle="detail-1">
                                        <div class="col-xs-10">
                                            Ingredients
                                        </div>
                                        <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                                    </div>
                                    <div id="detail-1">
                                        <hr></hr>
                                        <div class="container">
                                            <div class="fluid-row">
                                                <div class="col-xs-1">
                                                    @Model.ingredient_1<br />
                                                    @Model.ingredient_2 <br />
                                                    @Model.ingredient_3<br />
                                                    @Model.ingredient_4<br />
                                                    @Model.ingredient_5<br />
                                                    @Model.ingredient_6<br />
                                                    @Model.ingredient_7<br />
                                                    @Model.ingredient_8<br />
                                                    @Model.ingredient_9<br />
                                                    @Model.ingredient_10<br />
                                                    @Model.ingredient_11<br />
                                                    @Model.ingredient_12<br />
                                                    @Model.ingredient_13
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="row toggle" id="dropdown-detail-2" data-toggle="detail-2">
                                        <div class="col-xs-10">
                                            Nutritional Facts
                                        </div>
                                        <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                                    </div>
                                    <div id="detail-2">
                                        <hr></hr>
                                        <div class="container">
                                            <div class="fluid-row">
                                                <div class="col-xs-1">
                                                    Calories: @Model.calPerServg<br />
                                                    Total Fat: @Model.totalFat<br />
                                                    Sat: @Model.saturatedFat<br />
                                                    Trans: @Model.transFat<br />
                                                    Monounsat: @Model.monoUnsatFat<br />
                                                    Polyunsat: @Model.polyUnsatFat<br />
                                                    Omega 3: @Model.omega_3<br />
                                                    Omega 6: @Model.omega_6<br />
                                                    Chol: @Model.cholesterol<br />
                                                    Total Carb: @Model.totalCarb<br />
                                                    Dietary Fiber: @Model.dietaryFiber<br />
                                                    Sugar: @Model.sugar<br />
                                                    Protein: @Model.protein

                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="row toggle" id="dropdown-detail-3" data-toggle="detail-3">
                                        <div class="col-xs-10">
                                            Procedures
                                        </div>
                                        <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                                    </div>
                                    <div id="detail-3">
                                        <hr></hr>
                                        <div class="container">
                                            <div class="fluid-row">
                                                <div class="col-xs-1">
                                                    Detail: @Model.procedure
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>


                    <div>
                        <select id="select1" name="Qty">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>  Servings
                    </div>
                    <p></p>

                    <p class="btn btn-group pull-right">

                        <a href="Menu" class="btn btn-default btn-outline-secondary">Show all Meals</a>

                        <button class="btn btn-default btn-outline-secondary" id="submit">

                            Add to cart

                        </button>


                    </p>
                </form>
            </div>

        </div>

    </div>

</div>

