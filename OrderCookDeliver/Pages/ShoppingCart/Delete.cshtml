@page
@model OrderCookDeliver.Pages.ShoppingCart.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Meal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.Meal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.Meal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.Price) (each)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.Serving)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.Serving)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.PickupDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.PickupDay)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Cart.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to Cart</a>
    </form>
</div>
